---
import { string } from "astro:schema";

export interface Props {
    img: string;
    title: string;
    content: string;
}

const { img, title, content } = Astro.props;
---

<div class="group w-72 bg-white rounded-xl shadow-md hover:ring-2 hover:ring-accent-blue/40 transition duration-500 overflow-hidden">
    <img src={img} alt="" class="w-full h-40 object-cover transition-all duration-500 group-hover:scale-110 group-hover:brightness-75"/>

    <div class="p-5 space-y-2">
        <h6 class="font-semibold text-gray-900 group-hover:text-accent-blue transition duration-500">
            {title}
        </h6>
        <p class="text-gray-600 text-sm">
            {content}
        </p>
    </div>
</div>

<style></style>
