---

<section
  id="nuestros-trabajos"
  class="p-5 md:p-10 py-15 md:py-20 scroll-m-25 relative overflow-hidden"
>
  <!-- Imagen de fondo con filtro de desenfoque -->
  <div
    id="bg-slide"
    class="absolute inset-0 flex transition-transform duration-500 filter blur-sm w-[110%] h-[110%] -top-5 -left-5"
  >
    {
      JOBS.map((job) => (
        <div
          class="w-full h-full shrink-0 bg-center bg-cover bg-black/50 bg-blend-darken"
          style={`background-image: url(${job.img});`}
        />
      ))
    }
  </div>

  <div class="container relative mx-auto space-y-10 md:space-y-20 z-10">
    <div class="flex justify-center lg:justify-start">
      <h1 class="background-h1">Nuestros trabajos</h1>
    </div>

    <div>
      <article class="embla">
        <div class="embla__viewport">
          <div class="embla__container">
            {JOBS.map((job) => <JobComponent {...job} />)}
          </div>
        </div>

        <div class="embla__controls">
          <div class="embla__buttons">
            <button class="embla__button embla__button--prev" type="button">
              <svg class="embla__button__svg" viewBox="0 0 532 532">
                <path
                  fill="white"
                  d="M355.66 11.354c13.793-13.805 36.208-13.805 50.001 0 13.785 13.804 13.785 36.238 0 50.034L201.22 266l204.442 204.61c13.785 13.805 13.785 36.239 0 50.044-13.793 13.796-36.208 13.796-50.002 0a5994246.277 5994246.277 0 0 0-229.332-229.454 35.065 35.065 0 0 1-10.326-25.126c0-9.2 3.393-18.26 10.326-25.2C172.192 194.973 332.731 34.31 355.66 11.354Z"
                ></path>
              </svg>
            </button>

            <button class="embla__button embla__button--next" type="button">
              <svg class="embla__button__svg" viewBox="0 0 532 532">
                <path
                  fill="white"
                  d="M176.34 520.646c-13.793 13.805-36.208 13.805-50.001 0-13.785-13.804-13.785-36.238 0-50.034L330.78 266 126.34 61.391c-13.785-13.805-13.785-36.239 0-50.044 13.793-13.796 36.208-13.796 50.002 0 22.928 22.947 206.395 206.507 229.332 229.454a35.065 35.065 0 0 1 10.326 25.126c0 9.2-3.393 18.26-10.326 25.2-45.865 45.901-206.404 206.564-229.332 229.52Z"
                ></path>
              </svg>
            </button>
          </div>
        </div>
      </article>
    </div>
  </div>

  <script>
    import EmblaCarousel from "embla-carousel";
    import type { EmblaCarouselType } from "embla-carousel";
    import { addPrevNextBtnsClickHandlers } from "../scripts/embla/EmblaCarouselArrowButtons.js";
    import Autoplay from "embla-carousel-autoplay";
    import "../css/embla.css";

    const OPTIONS = { loop: true };

    const emblaNode = document.querySelector(".embla") as HTMLElement;
    const viewportNode = emblaNode.querySelector(
      ".embla__viewport",
    ) as HTMLElement;
    const prevBtnNode = emblaNode.querySelector(".embla__button--prev");
    const nextBtnNode = emblaNode.querySelector(".embla__button--next");

    const emblaApi: EmblaCarouselType = EmblaCarousel(viewportNode, OPTIONS);

    const onNavButtonClick = (emblaApi: EmblaCarouselType) => {
      const autoplay = emblaApi?.plugins()?.autoplay;
      if (!autoplay) return;

      const resetOrStop =
        autoplay.options.stopOnInteraction === false
          ? autoplay.reset
          : autoplay.stop;

      resetOrStop();
    };

    const removePrevNextBtnsClickHandlers = addPrevNextBtnsClickHandlers(
      emblaApi,
      prevBtnNode,
      nextBtnNode,
      onNavButtonClick,
    );

    emblaApi.on("destroy", removePrevNextBtnsClickHandlers);

    const section = document.querySelector("#bg-slide") as HTMLElement;

    if (emblaNode && section) {
      const updateBackgroundSlide = () => {
        const index = emblaApi.selectedScrollSnap();
        section.style.transform = `translateX(-${index * 100}%)`;
      };

      emblaApi.on("select", updateBackgroundSlide);
      updateBackgroundSlide();
    }
  </script>
</section>
